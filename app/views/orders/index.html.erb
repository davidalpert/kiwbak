


<div class="row">
  <div class="col-sm-6">
    <h1>Orders</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_order_path, class: 'btn btn-primary' do %>
    Add New Order
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Cell phone</th>
            <th>Home phone</th>
            <th>Heard how</th>
            <th>Afac boxes</th>
            <th>Self boxes</th>
            <th>Fulfilled</th>
            <th>Has paid</th>
            <th>Comments</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <%= content_tag :tr, id: dom_id(order), class: dom_class(order) do %>
          

                      <td><%= order.first_name %></td>
                      <td><%= order.last_name %></td>
                      <td><%= order.email %></td>
                      <td><%= order.cell_phone %></td>
                      <td><%= order.home_phone %></td>
                      <td><%= order.heard_how %></td>
                      <td><%= order.afac_boxes %></td>
                      <td><%= order.self_boxes %></td>
                      <td><%= order.fulfilled %></td>
                      <td><%= order.has_paid %></td>
                      <td><%= order.comments %></td>
          
          
            <td><%= link_to 'Show', order %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
